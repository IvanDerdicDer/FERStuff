<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/png" href="./images/flower-icon.png"/>
    <link rel="stylesheet" type="text/css" href="./vendor/normalize.css">
    <link rel="stylesheet" type="text/css" href="./styles/main.css">
    <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
</head>

<body class="content">

<%- include(`partials/header`); %>

<main class="main">
    <% for (let i = 0; i < categoryRows.length ; i++){%>
        <section class="section secondary-color-bg">
            <div class="centered-container">
                <h1 class="decorated-title font-secondary main-color">
                    <span class="main-color-emphasized"><%= categoryRows[i].name %></span>
                    Inventory</h1>
                <div class="separator"></div>
                
                <div class="gallery">
                    <% let j = null %>
                    <% for (j of inventoryRows.filter(a => a.categoryid === categoryRows[i].id)){%>
                    <div class="photo-box" data-id="<%= j.categoryid %>">
                        <img class="photo-box-image" src="<%= j.imageurl %>"></img>
                        <div class="photo-box-title font-secondary main-color-emphasized">
                            <a class="link" href="item/<%= j.id %>"><%= j.name %></a>
                        </div>
                    </div>
                    <%}%>
                </div>
                <% if(j === null){ %>
                    <div class="photo-box-title font-secondary main-color">No items in this category</div>
                <% } %>
                
            </div>
        </section>
    <%}%>
